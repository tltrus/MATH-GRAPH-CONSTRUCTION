<Window x:Class="MathGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathGraph"
        mc:Ignorable="d"
        Title="Hierarchical Navigable Small World (HNSW) graph visualization" Height="598" Width="846">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="btnBuild" Content="Build Step by Step" Click="btnBuild_Click" 
                    Margin="5" Padding="10,5" FontWeight="Bold"/>
            <Button x:Name="btnBuildInstant" Content="Build Instant" Click="btnBuildInstant_Click" 
                    Margin="5" Padding="10,5"/>
            <Button x:Name="btnReset" Content="Reset" Click="btnReset_Click" 
                    Margin="5" Padding="10,5" Background="#FF8E8E8E"/>
            <Button x:Name="btnClearConsole" Content="Clear Console" Click="btnClearConsole_Click" 
                    Margin="5" Padding="10,5"/>
        </StackPanel>

        <Grid Grid.Row="1" Background="White">
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10">
                <local:DrawingVisualClass x:Name="g" Background="White" Margin="0" MouseUp="g_MouseUp" HorizontalAlignment="Left" Width="800" Height="290" VerticalAlignment="Top"/>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Console:" FontWeight="Bold" 
                       Margin="10,5" Foreground="Black"/>

            <RichTextBox x:Name="rtbConsole" Grid.Row="1" Margin="10,0,10,10" 
                        VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                        FontFamily="Consolas" FontSize="11" Background="Black" Foreground="White">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
        </Grid>
    </Grid>

</Window>
