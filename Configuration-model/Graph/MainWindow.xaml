<Window x:Class="MathGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathGraph"
        mc:Ignorable="d"
        Title="Graph construction / Построение графов" Height="598" Width="846">

    <Grid>
        <WrapPanel HorizontalAlignment="Stretch">
            <local:DrawingVisualClass x:Name="g" Background="White" Height="550" Width="550" Margin="5" HorizontalAlignment="Left"/>
            <WrapPanel>
                <StackPanel>
                    <Button Name="btnStart" Content="Update" Margin="5" Width="260" Height="30" Click="BtnStart_Click"/>
                    <RichTextBox Name="rtbConsole" HorizontalAlignment="Left" Height="507" Width="260" Margin="5" FontSize="10" Foreground="#FF373636">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                                <Setter Property="Margin" Value="5"/>
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                </StackPanel>
            </WrapPanel>
        </WrapPanel>
    </Grid>

</Window>
